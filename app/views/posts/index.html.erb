<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Caption</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title if post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.caption if post.caption %></td>
        <td><%= post.user.name %> <%= post.user.surname %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<!-- Page Content -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Posts
              <small><%= @posts.count %> and counting...</small>
          </h1>
          <ol class="breadcrumb">
              <li><%= link_to 'Home', root_path %>
              </li>
              <li class="active">Posts</li>
          </ol>
      </div>
  </div>
  <!-- /.row -->

  <!-- Blog Post Row -->
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-1 text-center">
          <p><i class="fa fa-user fa-4x"></i>
          </p>
          <p><%= post.created_at %></p>
      </div>
      <div class="col-md-5">
          <%= link_to post do %>
            <img class="img-responsive img-hover" src="http://placehold.it/600x300" alt="">
          <% end %>
      </div>
      <div class="col-md-6">
          <h3>
              <%= link_to post.title, post %>
          </h3>
          <p>by <a href="/users/<%= post.user.id %>"><%= post.user.name %> <%= post.user.surname %></a>
          </p>
          <p><%= post.body %></p>
          <%= link_to post do %>
            Read More <i class="fa fa-angle-right"></i>
          <% end %>
      </div>
    <% end %>
  </div>
  <!-- /.row -->    